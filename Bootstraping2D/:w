#ifndef _LINE
#define _LINE
#include "Point.hpp"
class Line {
public:
  static void renderNaiveLine(Point p1, Point p2) {
    float dx = p2.x - p1.x;
    float dy = p2.y - p1.y;
    float m, b, x, y;
    x = p1.x;
    y = p1.y;
    if (p1.x == p2.x) {
      if (p1.y < p2.y) {
        Point temp = p1;
        p1 = temp;
        temp = p2;
      }
      while (y < p2.y) {
        // SDL_RenderDrawRectF(renderer, new Point(x, y, 1));
        x = p1.x + (dx / dy) * (y - p1.y);
        y++;
      }
    } else {
      if (p1.x < p2.x) {
        Point temp = p1;
        p1 = temp;
        temp = p2;
      }
      while (x < p2.x) {
        SDL_RenderDrawRectF(renderer, new Point(x, y, 1));
        y = p1.y + (dy / dx) * (x - p1.x);
        x++;
      }
    }
  }
};
#endif
